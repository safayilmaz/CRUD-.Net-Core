@model Crud.Entities.Notes
@{ Layout = "/Views/Shared/_Layout.cshtml"; }

<h1>Update Product</h1>
<hr />

<form action="/Home/Update" method="post">

    <div class="form group row">
        <div class="col-md-6">
            <input name="ID" id="ID" value="@Model.ID" readonly=true class="form-control" />
            <input name="Note" id="Note" value="@Model.Note" class="form-control mt-1" />
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary mt-1">Save Note</button>
    </div>

</form>


